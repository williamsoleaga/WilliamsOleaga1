    contentType: "application/json; charset=utf-8",
        dataType: "json",
        success: function (recData) {
            alert(recData);
        },
    error: function() { alert('A error'); }
    });

    });
    

    $("#pares").click(function () {

    $.ajax({
    type: "POST",
    url: '@Url.Action("Pares", "Home")',
    contentType: "application/json; charset=utf-8",
    dataType: "json",
        success: function (recData) {
            console.log(recData);
            //console.alert(recData);
            var numero = "";
            alert("Numeros pares : " + recData.resultado +" Y el mayor impar de la lista es : " + recData.mayor );
