        <h2>#1</h2>
        <text>Valor : </text>
        <input id="numero" />
        <button id="Agregar">Agregar a la lista</button>
        <button id="Inversa">Imprimir lista inversa</button>
        <button id="Eliminar">Eliminar de la lista</button>
        <button id="pares">Numeros pares </button>
        <button id="EliminarMayor">Eliminar el mayor </button>
        <button id="verlista">Ver lista</button>
    </div>

    <div></div>
