    $.ajax({
    type: "POST",
    url: '@Url.Action("EliminarMayor", "Home")',
    contentType: "application/json; charset=utf-8",
    dataType: "json",
        success: function (recData) {
            console.log(recData);
            
            alert("Mayor eliminado de esta lista : " + recData);
        },
    error: function() { alert('A error'); }
